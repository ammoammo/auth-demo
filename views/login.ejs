<% include partiels/header.ejs %>

<div class="row">
  <div class="col l6 offset-l3 m8 offset-m2 s12 center">
    <h3>Login</h3>
    <% if(error && error.length > 0) { %>
      <% console.log(error) %>
      <div class="card-panel center red lighten-1 white-text">
        <%= error %>
      </div>
    <% } %>
    <form action="/login" method="POST">
      <input type="text" name="username" placeholder="User Name">
      <input type="password" name="password" placeholder="User Password">
      <button class="btn" type="submit">Login</button>
    </form>
    <a href="/register" class="btn btn-flat"><ins>Register</ins></a>
  </div>
</div>

<% include partiels/footer.ejs %>
